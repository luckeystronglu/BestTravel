<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:background="@color/app_theme"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_activity_height">
    <ImageView
        android:id="@+id/search_img_back"
        android:src="@drawable/search_back"
        android:layout_marginLeft="@dimen/search_back_marleft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <EditText
        android:id="@+id/search_edit"
        android:layout_marginLeft="@dimen/search_back_marleft"
        android:hint="@string/plan_search_hint"
        android:textColorHint="#fff"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_marginRight="@dimen/search_margin_right"
        android:id="@+id/search_clear"
        android:src="@drawable/search_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>